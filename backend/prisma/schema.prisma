generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum TaskStatus {
  OPEN
  ACCEPTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum UserRole {
  MEMBER
  ADMIN
}

enum AssignmentStatus {
  PENDING
  ACCEPTED
  REJECTED
  COMPLETED
}

model Building {
  id       String  @id @default(uuid()) @db.Uuid
  name     String
  address  String?
  joinCode String? @unique
  metadata Json?

  users User[]
  tasks Task[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id         String    @id @default(uuid()) @db.Uuid
  buildingId String?   @db.Uuid
  building   Building? @relation(fields: [buildingId], references: [id])

  name         String
  email        String   @unique
  phone        String?
  passwordHash String
  role         UserRole @default(MEMBER)
  avatarUrl    String?
  bio          String?
  isActive     Boolean  @default(true)

  tasksOwned      Task[]           @relation("TasksOwned")
  assignments     TaskAssignment[]
  messages        Message[]
  notifications   Notification[]
  ratingsGiven    Rating[]         @relation("RatingsGiven")
  ratingsReceived Rating[]         @relation("RatingsReceived")
  attachments     Attachment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id         String   @id @default(uuid()) @db.Uuid
  buildingId String   @db.Uuid
  building   Building @relation(fields: [buildingId], references: [id])

  ownerId String? @db.Uuid
  owner   User?   @relation("TasksOwned", fields: [ownerId], references: [id])

  title       String
  description String?
  location    String?
  category    String?
  budget      Decimal?   @db.Decimal(12, 2)
  status      TaskStatus @default(OPEN)
  dueAt       DateTime?
  metadata    Json?

  assignments TaskAssignment[]
  messages    Message[]
  ratings     Rating[]
  attachments Attachment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TaskAssignment {
  id     String @id @default(uuid()) @db.Uuid
  taskId String @db.Uuid
  task   Task   @relation(fields: [taskId], references: [id])

  userId String? @db.Uuid
  user   User?   @relation(fields: [userId], references: [id])

  status AssignmentStatus @default(PENDING)
  notes  String?

  proposedAt  DateTime  @default(now())
  acceptedAt  DateTime?
  completedAt DateTime?

  @@unique([taskId, userId])
}

model Message {
  id     String @id @default(uuid()) @db.Uuid
  taskId String @db.Uuid
  task   Task   @relation(fields: [taskId], references: [id])

  senderId String? @db.Uuid
  sender   User?   @relation(fields: [senderId], references: [id])

  content     String
  attachments Json?
  isSystem    Boolean @default(false)

  createdAt DateTime @default(now())
}

model Notification {
  id     String @id @default(uuid()) @db.Uuid
  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id])

  type    String
  payload Json?
  isRead  Boolean @default(false)

  createdAt DateTime @default(now())
}

model Rating {
  id     String @id @default(uuid()) @db.Uuid
  taskId String @db.Uuid
  task   Task   @relation(fields: [taskId], references: [id])

  raterId String? @db.Uuid
  rater   User?   @relation("RatingsGiven", fields: [raterId], references: [id])

  ratedUserId String? @db.Uuid
  ratedUser   User?   @relation("RatingsReceived", fields: [ratedUserId], references: [id])

  rating  Int
  comment String?

  createdAt DateTime @default(now())
}

model Attachment {
  id     String @id @default(uuid()) @db.Uuid
  taskId String @db.Uuid
  task   Task   @relation(fields: [taskId], references: [id])

  uploaderId String? @db.Uuid
  uploader   User?   @relation(fields: [uploaderId], references: [id])

  url       String
  fileName  String?
  mimeType  String?
  sizeBytes Int?

  createdAt DateTime @default(now())
}
